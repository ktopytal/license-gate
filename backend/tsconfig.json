{
  "compilerOptions": {
    "target": "es2016",
    "lib": ["ES2022"],
    "module": "commonjs",
    "rootDir": "src",
    "outDir": "dist",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "exclude": ["node_modules"],
  "include": ["./src/**/*.ts", "../shared/**/*.ts"]
}
